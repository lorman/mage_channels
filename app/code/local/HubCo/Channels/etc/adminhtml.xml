<?xml version="1.0"?>
<config>
	<!-- We are defining a new menu item for the admin panel. -->
	<menu>
		<suppliers>
			<children>
				<!-- First, create a top-level menu item, which will appear alongside
					CMS -->
				<hubco_channels translate="title" module="hubco_brand">
					<title>Channels</title>
					<sort_order>2</sort_order>

						<module>HubCo_Channels</module>
					<action>hubco_channels_admin/channel</action>

				</hubco_channels>
			</children>
		</suppliers>
	</menu>

	<!-- Define ACL for access to these menu items. -->
	<acl>
		<resources>
			<admin>
				<children>
					<hubco_channels translate="title" module="hubco_brand">
						<title>Channels</title>
						<sort_order>2</sort_order>
						<children>
							<channels translate="title" module="hubco_brand">
								<title>Manage Channels</title>
							</channels>
						</children>
					</hubco_channels>
				</children>
			</admin>
		</resources>
	</acl>
</config>